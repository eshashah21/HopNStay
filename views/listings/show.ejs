<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
  <div class="col-12 text-center">
    <h3><%=listing.title%></h3>
  </div>
  <div class="card col-md-6 mx-auto show-card">
    <img
      src="<%=listing.image%>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text"><i>Owned by: <%=listing.owner.username%></i></p>
      <p class="card-text"><%=listing.description%></p>
      <p class="card-text">
        &#8377;<%=listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text"><%=listing.location%></p>
      <p class="card-text"><%=listing.country%></p>
    </div>
  </div>

  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="btns mb-5">
    <a href="/listings/<%=listing._id%>/edit" class="btn themed-btn edit-btn">
      Edit this listing
    </a>
    <form
      action="/listings/<%=listing._id%>?_method=DELETE"
      method="post"
      style="display: inline"
    >
      <button class="btn themed-btn delete-btn">delete this listing</button>
    </form>
  </div>
  <%}%>

  <div class="col-8 offset-3 mb-3">
    <% if(currUser) { %>
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%=listing._id%>/reviews"
      method="post"
      class="needs-validation"
      novalidate
    >
      <div class="mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="rating"
            class="input-no-rate"
            name="review[rating]"
            value="0"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Comment looks good!</div>
        <div class="invalid-feedback">
          Please submit some comments for review
        </div>
      </div>
      <button class="btns btn themed-btn delete-btn">Submit</button>
    </form>
    <%}%>

    <hr />
    <div>
      <h3>All Reviews</h3>
      <div class="row">
        <% for (review of listing.reviews){ %>
        <div class="card review-card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">@<%=review.author.username%></h5>
            <p
              class="starability-result mb-3"
              data-rating="<%=review.rating%>"
            ></p>
            <p class="card-text"><%=review.comment%></p>
          </div>
          <form
            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
            method="post"
          >
            <% if(currUser && currUser._id.equals(review.author._id)) { %>
            <button class="btn themed-btn delete-btn">delete</button>
            <%}%>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
