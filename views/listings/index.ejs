<% layout("/layouts/boilerplate") %>

<div id="filters" class="scrollable-filters">
  <% const categories = [
    { name: "Trending", icon: "fa-house-fire" },
    { name: "Rooms", icon: "fa-bed" },
    { name: "Iconic Cities", icon: "fa-mountain-city" },
    { name: "Hill", icon: "fa-mountain-sun" },
    { name: "Beach view", icon: "fa-umbrella-beach" },
    { name: "Farm House", icon: "fa-tractor" },
    { name: "Camping", icon: "fa-tents" },
    { name: "Amazing pools", icon: "fa-person-swimming" },
    { name: "Forest House", icon: "fa-tree" },
    { name: "Arctic", icon: "fa-snowflake" }
  ]; %>
  
  <% for (let cat of categories) { %>
    <a href="/listings/category/<%= encodeURIComponent(cat.name) %>" class="filter">
      <div><i class="fa-solid <%= cat.icon %>"></i></div>
      <p><%= cat.name %></p>
    </a>
  <% } %>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

            <h3 class="mt-3 listing-heading">Discover Your Next Getaway</h3>

            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
              <% for(let listing of allListings){ %>
              <a class="listing-link" href="/listings/<%=listing._id%>">
                <div class="card col">
                  <img
                    src="<%=listing.image.url%>"
                    class="card-img-top"
                    alt="listing_image"
                    style="height: 20rem"
                  />
                  <div class="card-img-overlay"></div>
                  <div class="card-body">
                    <p class="card-text">
                      <b><%=listing.title %></b> <br />
                      &#8377;<%=listing.price.toLocaleString("en-In")%>/night
                      <i class="tax-info">&nbsp; +18% GST</i>
                    </p>
                  </div>
                </div>
              </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>